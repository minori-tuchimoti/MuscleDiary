<body style="background-image: url('<%= asset_path('sport-908264_640.jpg') %>'); no-repeat center center; background-size: cover; background-color: rgba(255,255,255,0.5);">
<div class="container mt-4" style="background-color: rgba(255,255,255,0.7); padding: 20px; border-radius: 10px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Editing Book</h1>
            <%= form_for(@muscle) do |f| %>
                <% if @muscle.errors.any? %>
                    <div class="error">
                        <h3><%= @muscle.errors.count %> errors prohibited this post from being saved:</h3>
                        <ul>
                            <% @muscle.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <div class="form-group">
                    <div class="form-title">Title</div> 
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <div class="form-body">Opinion</div>
                    <%= f.text_area :body, class: 'form-control' %>
                </div>
                <div class="form-group text-center">
                    <%= f.submit "Update Book", class: 'btn btn-primary' %>
                </div>
            <% end %>
            
            <div class="menu mt-3 text-center">
                <%= link_to "Show", muscle_path(@muscle), class: 'btn btn-secondary' %>
                |
                <%= link_to "Back", muscles_path, class: 'btn btn-secondary' %>
            </div>
        </div>
    </div>
</div>
</body>