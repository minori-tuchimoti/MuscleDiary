<% if current_user != user %>
  <% button_class = current_user.following?(user) ? "btn btn-info" : "btn btn-success" %>
  <% button_text = current_user.following?(user) ? "フォロー外す" : "フォローする" %>
  <%= link_to button_text, user_relationships_path(user.id), method: (current_user.following?(user) ? :delete : :post), class: button_class %>
<% end %>