<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 text-center mt-4">
      <h2>Follow Users</h2>
      <% if @users.exists? %>
        <table class="table">
          <thead>
            <tr>
              <th>Profile Image</th>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user do %>
                    <% if user.profile_image.present? %>
                      <%= image_tag user.profile_image, size: '50x50' %>
                    <% else %>
                      <%= image_tag 'default_profile.png', size: '50x50' %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to user.name, user %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
      <%= link_to 'Back', users_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>