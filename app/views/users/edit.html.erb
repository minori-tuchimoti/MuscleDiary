<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid mt-5">
  <div class="header row">
    <div class="mx-auto">
      <div class="col">
        <h2>User info</h2>
      </div>
  
  
      <%= form_with model: @user do |f| %>
        <div class="row mt-1">
          <label for="inputName">Name</label>
        </div>
        <div class="row">
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="row mt-3">
          <label for="inputImage">Image</label>
        </div>
        <div class="row">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
        </div>
        <div class="row mt-3">
          <label for="inputIntroduction">Introduction</label>
        </div>
        <div class="row">
          <%= f.text_area :introduction %>
        </div>
        <div class="row mt-3">
          <%= f.submit "Update User" %>
          
        </div>
      <% end %>
      <%= form_tag(user_path(@user), method: :delete) do %>
        <%= csrf_meta_tags %>
        <%= submit_tag "Delete User" %>
      <% end %>
    </div>
  </div>
</div>